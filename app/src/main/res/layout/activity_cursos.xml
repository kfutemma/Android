<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCursos">

    <ImageView
        android:id="@+id/imageViewCursosTitulo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/cursos"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textViewCursosTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Cursos"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewCursosTitulo"
        app:layout_constraintStart_toEndOf="@+id/imageViewCursosTitulo"
        app:layout_constraintTop_toTopOf="@+id/imageViewCursosTitulo" />

    <ImageView
        android:id="@+id/imageViewVoltarCursos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_home_40dp" />
</android.support.constraint.ConstraintLayout>